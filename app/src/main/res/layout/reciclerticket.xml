<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:background="@color/colorPrimaryDark"
    android:weightSum="1">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/re"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producto"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Uds"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginRight="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Precio"
            android:id="@+id/precio2"
            android:layout_gravity="right|top"
            android:layout_marginRight="40dp" />

    </FrameLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecView"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"

        android:layout_marginBottom="50dp"
        android:layout_below="@id/re"
        android:layout_above="@+id/linear"


        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="0.49" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/linear"
        android:layout_alignBottom="@id/RecView"

        android:layout_alignParentStart="true"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total:"
            android:id="@+id/ptotal"
            android:layout_marginLeft="0dp"
            android:layout_alignTop="@+id/ptotal2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="48dp">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/ptotal2"
            android:textSize="20dp"

            android:text="TOTAL"
            android:layout_marginLeft="355dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/ptotal"
            android:layout_marginEnd="41dp" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative"

        android:layout_alignBottom="@id/linear"
        android:layout_alignParentStart="true"
        android:layout_weight="0.93">



        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedir"
        android:id="@+id/bpedir"
        android:textSize="30dp"

         />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seguir "
        android:id="@+id/bseguir"
        android:layout_alignBottom="@+id/bpedir"
        android:layout_alignParentEnd="true"
        android:textSize="30dp" />

    </RelativeLayout>
</LinearLayout>