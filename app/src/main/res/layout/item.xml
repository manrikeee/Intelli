<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="0dp"


    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mesa2"
        android:padding="0dp">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="#00ffffff"
            android:layout_alignParentStart="false"
            android:layout_marginStart="31dp"
            android:layout_above="@+id/parent_list_item_expand_arrow"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="BEBIDAS"
            android:id="@+id/tipo"
            android:layout_marginLeft="10dp"
            android:textSize="50dp"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:layout_marginTop="23dp"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/parent_list_item_expand_arrow" />

        <ImageButton
            android:id="@+id/parent_list_item_expand_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/arrow_down_float"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:tint="@color/abc_input_method_navigation_guard"
            android:foreground="#00ffffff"
            android:focusableInTouchMode="false"
            android:elevation="0dp"
            android:cropToPadding="false"
            android:focusable="false"
            android:backgroundTint="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false" />

    </RelativeLayout>
</android.support.v7.widget.CardView>